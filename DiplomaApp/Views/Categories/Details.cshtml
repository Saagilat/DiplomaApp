@using DiplomaApp.Core
@model DiplomaApp.ViewModels.CategoryDetails

@{
    ViewData["Title"] = @Model.Category.Name;
}
<div>
    <div>
        <h1>Маркетплейс: <a href="@Model.Category.MarketplaceUrl">@Model.Category.MarketplaceName</a></h1>
        <h3>Категория: <a href="@Model.Category.Url">@Model.Category.Name</a></h3>
    </div>
    @if (User.IsInRole(Constants.administrator))
    {
    <div class="btn-group">
        <a class="btn btn-outline-primary form-control h-50 w-auto" asp-controller="Marketplaces" asp-action="GetCategoryOffers" asp-route-id="@Model.Category.Id">Обновить предложения</a>
        <a class="btn btn-outline-primary form-control h-50 w-auto" asp-controller="Categories" asp-action="Index">Назад к списку</a>
    </div>
    }
    <div class="mt-3">
        @{ Html.RenderPartial("~/Views/Offers/PartialRender/IndexTable.cshtml", Model.Offers); }
    </div>
</div>
