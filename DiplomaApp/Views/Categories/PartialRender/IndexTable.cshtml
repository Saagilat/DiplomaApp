@model X.PagedList.PagedList<DiplomaApp.Models.Category>
@using X.PagedList.Mvc.Core;
@{
        var query = Context.Request.Query;
}
<div class="mt-3 mb-3">
    @Html.PagedListPager(Model, page => (Url.Action(ViewContext.RouteData.Values["action"].ToString(), 
    new {
        id=ViewContext.RouteData.Values["id"],
        page=page})),
    new X.PagedList.Web.Common.PagedListRenderOptions {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }
    })
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                URL
            </th>
            <th>
                Дата проверки
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a href=@item.Url>@Html.DisplayFor(modelItem => item.Url)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CheckDate)
                    </td>
                    <td>
                        <a asp-controller="Categories" asp-action="Details" asp-route-id="@item.Id">Просмотреть</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>