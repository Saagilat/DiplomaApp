@model DiplomaApp.ViewModels.RequestChangeStatus

@{
    ViewData["Title"] = "Изменить статус заявки";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <form asp-action="ChangeStatus">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mt-3">
            <input type="hidden" asp-for=Theme value=@Model.Theme/>
            <textarea class="form-control" readonly>@Model.Theme</textarea>
        </div>
        <div class="mt-3">
            <input type="hidden" asp-for=Text value=@Model.Text/>
            <textarea class="form-control" readonly>@Model.Text</textarea>
        </div>
        <div class="mt-3">
            <select class="form-control" asp-for=RequestStatusId asp-items=@ViewBag.RequestStatuses></select>
        </div>
        <div class="mt-3">
            <input class="btn btn-primary form-control text-center" type="submit" value="Отправить" />
            <a class="btn btn-primary form-control text-center mt-2" asp-action="Index">Назад к списку</a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}