@model DiplomaApp.ViewModels.RequestCreate

@{
    ViewData["Title"] = "Оставить заявку";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                @Html.DisplayNameFor(model => model.Theme)
                @Html.TextAreaFor(model => model.Theme, new {@class="form-control"})
            </div>
            <div class="mb-3">
                @Html.DisplayNameFor(model => model.Text)
                @Html.TextAreaFor(model => model.Text, new {@class="form-control"})
            </div>
            <div class="mt-3">
                <input class="btn btn-primary form-control text-center" type="submit" value="Сохранить" />
                <a class="btn btn-primary form-control text-center mt-2" asp-action="Index">Назад к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}