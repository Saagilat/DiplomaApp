@model DiplomaApp.ViewModels.MarketplaceEdit

@{
    ViewData["Title"] = "Изменить";
}

<h1>@ViewData["Title"] маркетплейс: @Model.Marketplace.Name</h1>
<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <h3>Маркетплейс</h3>
                @Html.DisplayNameFor(model => model.Marketplace.Id)
                @Html.EditorFor(model => model.Marketplace.Id, new { htmlAttributes = new { @class = "form-control", @readonly="true"} })
                @Html.DisplayNameFor(model => model.Marketplace.Name)
                @Html.EditorFor(model => model.Marketplace.Name, new { htmlAttributes = new { @class = "form-control"} })
                @Html.DisplayNameFor(model => model.Marketplace.Url)
                @Html.EditorFor(model => model.Marketplace.Url, new { htmlAttributes = new { @class = "form-control"} })
            </div>
            <div>
                <h3>Карта парсинга каталога</h3>
                @Html.EditorFor(model => model.CatalogMap, new { htmlAttributes = new { @class = "form-control"} })
            </div>
            <div>
                <h3>Карта парсинга категории</h3>
                @Html.EditorFor(model => model.CategoryMap, new { htmlAttributes = new { @class = "form-control"} })
            </div>
            <div>
                <h3>Карта парсинга товара</h3>
                @Html.EditorFor(model => model.OfferMap, new { htmlAttributes = new { @class = "form-control"} })
            </div>
            <div class="mt-3">
                <input type="submit" value="Сохранить" class="btn btn-primary form-control" />
                <a asp-action="Index" class="btn btn-primary form-control mt-2 text-center">Назад к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
