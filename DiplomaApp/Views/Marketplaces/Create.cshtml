@model DiplomaApp.ViewModels.MarketplaceEdit

@{
    ViewData["Title"] = "Добавить";
}

<h1>@ViewData["Title"]</h1>

<h4>Маркетплейс</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <div>
                    <h4>Маркетплейс</h4>
                    @Html.DisplayNameFor(model => model.Marketplace.Name)
                    @Html.EditorFor(model => model.Marketplace.Name, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.DisplayNameFor(model => model.Marketplace.Url)
                    @Html.EditorFor(model => model.Marketplace.Url, new { htmlAttributes = new { @class = "form-control"} })
                </div>
                <div>
                    <h4>Карта парсинга каталога</h4>
                    @Html.EditorFor(model => model.CatalogMap, new { htmlAttributes = new { @class = "form-control"} })
                </div>
                <div>
                    <h4>Карта парсинга категории</h4>
                    @Html.EditorFor(model => model.CategoryMap, new { htmlAttributes = new { @class = "form-control"} })
                </div>
                <div>
                    <h4>Карта парсинга товара</h4>
                    @Html.EditorFor(model => model.OfferMap, new { htmlAttributes = new { @class = "form-control"} })
                </div>
                <div class="mt-3">
                    <input type="submit" value="Сохранить" class="btn-primary form-control text-center" />
                    <a class="btn-primary form-control mt-2 text-center" asp-action="Index">Назад к списку</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
