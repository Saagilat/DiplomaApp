@using DiplomaApp.Core
@model IEnumerable<DiplomaApp.Models.Marketplace>

@{
    ViewData["Title"] = "Маркетплейсы";
}

<h1>@ViewData["Title"]</h1>

@if (User.IsInRole(Constants.administrator))
{
    <div class="row">
        <a asp-action="Create">Добавить</a>
        <a asp-action="GetOffersAllMarketplaces">Обновить все маркетплейсы</a>
    </div>
}

<div>
    @{ Html.RenderPartial("~/Views/Marketplaces/PartialRender/IndexTable.cshtml", Model); }
</div>